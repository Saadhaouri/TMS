@{
    ViewBag.Title = "Management page - Hung Dat Transport Joint Stock Company";











    var info = CultureInfo.GetCultureInfo("vi-VN").NumberFormat;







    info = (NumberFormatInfo)info.Clone();







    info.CurrencySymbol = "DH";
}
@model HomeViewModel
<div class="row">
    <div class="col-lg-3 col-6 p-1">
        <!-- small box -->
        <div class="small-box" style="background: #4e54c8;  /* fallback for old browsers */
background: -webkit-linear-gradient(to right, #8f94fb, #4e54c8);  /* Chrome 10-25, Safari 5.1-6 */
background: linear-gradient(to right, #8f94fb, #4e54c8); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
; border-radius :10px ;  ">
            <div class="inner">
                <div class="col-12 triangle-topleft">
                    <p class="m-0">Number of trips completed</p>
                    <h3>@Model.TransportCompeletedInMonth</h3>
                </div>
                <div class="col-12 triangle-bottomright position-relative">
                    <h3>@Model.TransportInMonth</h3>
                    <p class="m-0">Total trips by month</p>
                </div>
            </div>
            <div class="icon">
            <i class="ion ion-bag"></i>
            </div>
            <a href="TransportManagement\Views\TransInfo\Details.cshtml" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6 p-1">
        <!-- small box -->
        <div class="small-box" style="background: #c31432;  /* fallback for old browsers */
                            background: -webkit-linear-gradient(to right, #240b36, #c31432);  /* Chrome 10-25, Safari 5.1-6 */
                            background: linear-gradient(to right, #240b36, #c31432); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
                            border-radius :10px ;">
            <div class="inner">
                <div class="col-12 triangle-topleft">
                    <p class="m-0">Number of vehicles in transit</p>
                    <h3>@Model.VehiclesBusyCount</h3>
                </div>
                <div class="col-12 triangle-bottomright position-relative">
                    <h3>@Model.VehiclesCount</h3>
                    <p class="m-0">Total car ownership</p>
                </div>
            </div>
            @*<div class="icon">
            <i class="ion ion-stats-bars"></i>
            </div>
            <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>*@
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6 p-1">
        <!-- small box -->
        <div class="small-box" style="background: #36D1DC;  /* fallback for old browsers */
background: -webkit-linear-gradient(to right, #5B86E5, #36D1DC);  /* Chrome 10-25, Safari 5.1-6 */
background: linear-gradient(to right, #5B86E5, #36D1DC); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
  border-radius :10px ; ">
            <div class="inner">
                <div class="col-12 triangle-topleft">
                    <p class="m-0">Number of drivers with jobs</p>
                    <h3>@Model.DriverBusyCount</h3>
                </div>
                <div class="col-12 triangle-bottomright position-relative">
                    <h3>@Model.DriversCount</h3>
                    <p class="m-0">General driver</p>
                </div>
            </div>
